extends layouts/main

block content
    .container
        if userIsLogin && isCreator
            .row
                form(action="/stories/"+story._id+"?_method=DELETE" method="post")
                    input(type="submit" value="Eliminar")
        .row
            .col-12.d-flex.justify-content-center
                h1 #{story.title}

        .row
            .col-12
                .container!= story.content