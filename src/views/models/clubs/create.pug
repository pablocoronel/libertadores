extends ../../layouts/admin.pug

block content
    .container
        h1 Crear club

        form(action="/admin/clubs" method="post" enctype="multipart/form-data")
            .form-group.row
                label.col-form-label.col-sm-2(for="name") Nombre
                input.form-control.col-sm-10(type="text" name="name")

            .form-group.row
                label.col-form-label.col-sm-2(for="shield") Escudo
                input.form-control.col-sm-10(type="file" name="shield")

            .form-group.row
                label.col-form-label.col-sm-2(for="country") Pa√≠s
                select(name="country")
                    option(value="") Seleccionar
                    each country in countries
                        option(value=country) #{country}

            button.btn.btn-primary(type='submit') Crear