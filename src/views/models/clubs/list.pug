extends ../../layouts/admin.pug

block content
    .container
        h1 Lista club

        table.table
            thead
                tr
                    th(scope='col') #
                    th(scope='col') Nombre
                    th(scope='col') Editar
                    th(scope='col') Borrar
            tbody
                each club in clubs
                    tr
                        th(scope='row') 1
                        td #{club.name}
                        td
                            a(href="/clubs/"+club._id+"/edit") Editar
                        td
                            form(action="/clubs/"+club._id+"?_method=DELETE" method="post")
                                input.btn.btn-link(type="submit" value="Borrar")